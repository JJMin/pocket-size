<!-- views/urls_register.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>Pocket-Size</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
    crossorigin="anonymous">
</head>

<body>
  <% include partials/_header %>
  <div class="container col-md-5 col-md-auto border border-primary" style="padding: 60px; margin-top: 100px">
      <form action="/register" method="POST" class="justify-content-md-center">
        <div class="form-group">
          <label for="email">Email address</label>
          <input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp" placeholder="Enter email">
          <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" class="form-control" id="password" name="password" placeholder="Password">
        </div>
        <% if (messages.length > 0) { %>
          <div class="alert alert-danger" role="alert"> <%=  messages; %> </div>
        <% } %>
        <div class="form-row text-center">
          <div class="col-12">
            <button type="submit" class="btn btn-primary" value="submit" style="padding: 8px 75px">Register</button>
            <p>Have an account already? <a href="/login">Sign In Now</a></p>
          </div>
        </div>
      </form>
    </div>
</body>

</html>